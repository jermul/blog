<% provide(:title, "Admin login") %>
<h1>Administrator login</h1>

<div class="row">
  <div class="span6 offset1">
    <%= form_for(:session, url: sessions_path) do |f| %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.submit "Login", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>